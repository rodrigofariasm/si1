package lab01;
import java.util.HashMap;


public class Escritor {
	private String input;
	private HashMap<String, String> map;


	public Escritor() throws Exception{
		setInput(""); 
		map = new HashMap<String, String>();
		populateMap();

	}

	private void populateMap(){
		map.put("0", "zero");
		map.put("1", "um");
		map.put("2", "dois");
		map.put("3", "três");
		map.put("4", "quatro");
		map.put("5", "cinco");
		map.put("6", "seis");
		map.put("7", "sete");
		map.put("8", "oito");
		map.put("9", "nove");
		map.put("10", "dez");
		map.put("11", "onze");
		map.put("12", "doze");
		map.put("13", "treze");
		map.put("14", "catorze");
		map.put("15", "quinze");
		map.put("16", "dezesseis");
		map.put("17", "dezessete");
		map.put("18", "dezoito");
		map.put("19", "dezenove");
		map.put("20", "vinte");
		map.put("30", "trinta");
		map.put("40", "quarenta");
		map.put("50", "cinquenta");
		map.put("60", "sessenta");
		map.put("70", "setenta");
		map.put("80", "oitenta");
		map.put("90", "noventa");
		map.put("100", "cem");
		map.put("200", "duzentos");
		map.put("300", "trezentos");
		map.put("400", "quatrocentos");
		map.put("500", "quinhentos");
		map.put("600", "seiscentos");
		map.put("700", "setecentos");
		map.put("800", "oitocentos");
		map.put("900", "novecentos");
		map.put("1000", "mil");

	}

	public void setInput(String entry) throws Exception {

		if(!entry.equals("")){
			try{
				Integer.parseInt(entry);
				this.input = entry;
			}
			catch(Exception e){
				throw new Exception("Deve informar um número");
			}
		}

		else this.input = entry;

	}
	private Object getInput() {
		return this.input;
	}

	public String geraNumero() throws Exception {
		setInput(retiraZerosEsquerda(this.input));
		if(input.equals("")){
			throw new Exception("Numero não informado");
		}
		else if(map.containsKey(getInput())){
			return map.get(getInput());
		}
		else{
			String result = "";
			if(input.length() == 4 && input.startsWith("1")){
				result += "mil ";
				if(input.substring(1, input.length()).startsWith("0")){
					result += "e " + geraNumero(input.substring(1));
				}else{
					result += geraNumero(input.substring(1));
				}
				
			}else if(input.length() == 3){
				if(input.startsWith("1")){
					result += "cento e " + geraNumero(input.substring(1));
				}else{
					result += map.get(input.substring(0, 1) + "00") + " e " + geraNumero(input.substring(1, input.length()));
				}
			}else if(input.length() >= 4 && input.length() < 7){
				if (input.substring(input.length() - 3, input.length() - 2) == "0" && !(input.substring(input.length() - 2, input.length() - 1).startsWith("0") || input.substring(input.length() - 1, input.length()).startsWith("0"))){
					result += geraNumero(input.substring(0, (input.length()-3))) + " mil e " + geraNumero(input.substring((input.length()-3), input.length()));
				}else{
					result += geraNumero(input.substring(0, (input.length()-3))) + " mil " + geraNumero(input.substring((input.length()-3), input.length()));
				}
			}else{
				result += map.get(input.substring(input.length() - 2, input.length() - 1) + "0") + " e " + map.get(input.substring(1, input.length()));
			}
			return result;

		}
	}
	
	public String geraNumero(String input) throws Exception {
		if(input == "000"){
			return "";
		}
		input = retiraZerosEsquerda(input);
		if(map.containsKey(input)){
			return map.get(input);
		}else{
			String result = "";
			if(input.length() == 3){
				if(input.startsWith("1")){
					result += "cento e " + geraNumero(input.substring(1));
				}else{
					result += map.get(input.substring(0, 1) + "00") + " e " + geraNumero(input.substring(1, input.length()));
				}
			}else{
				result += map.get(input.substring(input.length() - 2, input.length() - 1) + "0") + " e " + map.get(input.substring(1, input.length()));
			}
			return result;

		}
	}
	
	public String retiraZerosEsquerda(String input){
		String result = input;
		while(result.startsWith("0") && result.length() > 1){
			result = input.substring(1, input.length());
		}
		return result;
	}
}
