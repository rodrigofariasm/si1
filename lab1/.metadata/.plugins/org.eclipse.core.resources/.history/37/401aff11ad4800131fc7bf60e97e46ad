package lab01;

import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;

public class TesteEscritor {

	private Escritor ntw;
    @Before
    public void before() throws Exception {
            ntw = new Escritor();
    }

    @Test
    public void simplestCase() throws Exception {
            String teste = new String("0");
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("zero"));
            
            teste = "1";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("um"));
            
            teste = "2";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("dois"));
            
            teste = "3";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("três"));
            
            teste = "4";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("quatro"));
            
            teste = "5";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("cinco"));
            
            teste = "6";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("seis"));
            
            teste = "7";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("sete"));
            
            teste = "8";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("oito"));
            
            teste = "9";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("nove"));
            
            teste = "10";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("dez"));
    }
    
    @Test
    public void oneWordNumber() throws Exception{
            String teste = new String("11");
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("onze"));
            
            teste = "12";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("doze"));
            
            teste = "13";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("treze"));
            
            teste = "14";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("catorze"));
            
            teste = "15";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("quinze"));
            
            teste = "16";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("dezesseis"));
            
            teste = "17";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("dezessete"));
            
            teste = "18";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("dezoito"));
            
            teste = "19";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("dezenove"));
            
            teste = "20";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("vinte"));
            
            teste = "30";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("trinta"));
            
            teste = "40";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("quarenta"));
            
            teste = "50";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("cinquenta"));
            
            teste = "60";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("sessenta"));
            
            teste = "70";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("setenta"));
            
            teste = "80";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("oitenta"));
            
            teste = "90";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("noventa"));
            
            teste = "100";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("cem"));
            
            teste = "200";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("duzentos"));
            
            teste = "300";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("trezentos"));
            
            teste = "400";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("quatrocentos"));
            
            teste = "500";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("quinhentos"));
            
            teste = "600";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("seiscentos"));
            
            teste = "700";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("setecentos"));
            
            teste = "800";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("oitocentos"));
            
            teste = "900";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("novecentos"));
            
            teste = "1000";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("mil"));
    }
    
    @Test
    public void emptyString(){
            try{
                    ntw.geraNumero();
                    fail();
            }
            catch(Exception e){
                    e.getMessage().equals("Numero não informado");
            }
    }
    
    @Test
    public void wrongInput(){
            String teste = new String("q");
            
            try{
                    ntw.setInput(teste);
                    fail();
            }
            catch(Exception e){
                    e.getMessage().equals("Deve informar um número");
            }
    }
    
    @Test
    public void numberBetween21and99() throws Exception{
            String teste = new String("21");
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("vinte e um"));
            
            teste = "22";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("vinte e dois"));
            
            teste = "23";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("vinte e três"));
            
            teste = "29";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("vinte e nove"));
            
            teste = "34";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("trinta e quatro"));
            
            teste = "38";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("trinta e oito"));
            
            teste = "45";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("quarenta e cinco"));
            
            teste = "46";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("quarenta e seis"));
            
            teste = "51";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("cinquenta e um"));
            
            teste = "59";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("cinquenta e nove"));
            
            teste = "62";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("sessenta e dois"));
            
            teste = "68";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("sessenta e oito"));
            
            teste = "73";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("setenta e três"));
            
            teste = "77";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("setenta e sete"));
            
            teste = "84";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("oitenta e quatro"));
            
            teste = "86";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("oitenta e seis"));
            
            teste = "95";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("noventa e cinco"));
            
            teste = "99";
            ntw.setInput(teste);
            assertTrue(ntw.geraNumero().equals("noventa e nove"));
    }
    
    @Test
    public void numberBetween100and999() throws Exception{
        String teste = new String("121");
        ntw.setInput(teste);
        assertTrue(ntw.geraNumero().equals("cento e vinte e um"));
        
        teste = new String("245");
        ntw.setInput(teste);
        assertTrue(ntw.geraNumero().equals("duzentos e quarenta e cinco"));
        
        teste = new String("307");
        ntw.setInput(teste);
        assertTrue(ntw.geraNumero().equals("trezentos e sete"));
        
        teste = new String("480");
        ntw.setInput(teste);
        assertTrue(ntw.geraNumero().equals("quatrocentos e oitenta"));
        
        teste = new String("587");
        ntw.setInput(teste);
        assertTrue(ntw.geraNumero().equals("quinhentos e oitenta e sete"));
        
    }
    @Test
    public void numberBetween1000and1999() throws Exception{
        String teste = new String("1000");
        ntw.setInput(teste);
        assertTrue(ntw.geraNumero().equals("mil"));
    
        teste = new String("1010");
        ntw.setInput(teste);
        assertTrue(ntw.geraNumero().equals("mil e dez"));
    
        teste = new String("1451");
        ntw.setInput(teste);
        assertTrue(ntw.geraNumero().equals("mil quatrocentos e cinquenta e um"));
    
        teste = new String("1987");
        ntw.setInput(teste);
        assertTrue(ntw.geraNumero().equals("mil novecentos e oitenta e sete"));
    
    }
    
    @Test
    public void numberBetween2000and1000000000() throws Exception{
        String teste = new String("7000");
        ntw.setInput(teste);
        assertTrue(ntw.geraNumero().equals("sete mil"));
    
        teste = new String("21010");
        ntw.setInput(teste);
        assertTrue(ntw.geraNumero().equals("vinte e um mil e dez"));
    
        teste = new String("148451");
        ntw.setInput(teste);
        assertTrue(ntw.geraNumero().equals("cento e quarenta e oito mil quatrocentos e cinquenta e um"));
    
        teste = new String("156564987");
        ntw.setInput(teste);
        assertTrue(ntw.geraNumero().equals("cento e cinquenta e seis milhoes quinhetos e sessenta e quatro mil novecentos e oitenta e sete"));
 
        teste = new String("100564987");
        ntw.setInput(teste);
        assertTrue(ntw.geraNumero().equals("cem milhoes quinhetos e sessenta e quatro mil novecentos e oitenta e sete"));
        
        teste = new String("999564987");
        ntw.setInput(teste);
        assertTrue(ntw.geraNumero().equals("novecentos e noventa e nove milhões quinhentos e sessenta e quatro mil novecentos e oitenta e sete"));
 
    }
}
